---
interface Props {
  content: string;
}

const { content } = Astro.props;

const styledContent = content
  .replace(/<\/([^>]+)>/g, "</span>")
  .replace(/<([^/])([^>]*)>/g, '<span class="$1$2">');
---

<div class="bg-black text-left p-5 rounded-xl mb-6 text-white">
  <div
    class="w-[55px] h-[14px] mb-4"
    style="background:url(data:image/svg+xml;base64,) no-repeat"
  >
  </div>

  <code
    class="terminal-code block whitespace-pre-wrap font-mono text-xs"
    set:html={styledContent.trim()}
  />
</div>
